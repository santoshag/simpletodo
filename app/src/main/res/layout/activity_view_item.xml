<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <include layout="@layout/toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="0.24"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:paddingTop="20dp"
            android:text="@string/taskName"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.77"
            android:paddingTop="16dp"
            android:text="@string/taskName"
            android:textAlignment="textStart"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_weight="0.08">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.16"
            android:paddingTop="20dp"
            android:text="@string/taskNotes"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvItemNotes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.79"
            android:paddingTop="16dp"
            android:text="@string/taskName"
            android:textAlignment="textStart"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="91dp"
            android:layout_height="78dp"
            android:paddingTop="12dp"
            android:text="@string/priority"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvPriority"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:paddingTop="12dp"
            android:text="@string/taskName"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_weight="0.46"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_event_black_36dp"
            android:layout_gravity="center_horizontal"
            android:tint="@color/primary" />

        <TextView
            android:id="@+id/tvCalendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:paddingTop="8dp"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1"
        android:visibility="invisible">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageView2"
            android:src="@drawable/ic_place_black_36dp"
            android:layout_gravity="center_horizontal"
            android:tint="@color/primary"/>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="329dp"
            android:layout_height="73dp"
            android:paddingTop="8dp"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/location_filler" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_weight="1.08">

            <ImageView
                android:layout_width="280dp"
                android:layout_height="150dp"
                android:id="@+id/googleStaticImgForLocation"
                android:background="@drawable/imageview_border"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50dp"
                android:visibility="invisible" />



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="48dp"
                android:layout_height="162dp"
                android:paddingTop="20dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:id="@+id/ivNavigate"
                    android:layout_gravity="center_vertical|right"
                    android:src="@drawable/ic_navigation_black_24dp"
                    android:tint="@color/primary"
                    android:visibility="invisible"
                    android:onClick="navigateWithGMaps"
                    android:paddingTop="10dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>